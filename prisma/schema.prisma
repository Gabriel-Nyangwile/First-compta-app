  //  Paie (Schema de base)
  // =============================

  enum PayrollPeriodStatus {
    OPEN
    LOCKED
    POSTED
  }

  enum PayslipLineKind {
    BASE
    PRIME
    RETENUE
    COTISATION_SALARIALE
    COTISATION_PATRONALE
    IMPOT
    AJUSTEMENT
  }

  enum ContributionBaseKind {
    BASE_SALAIRE
    BRUT
    IMPOSABLE
  }

  enum TaxRoundingMode {
    NONE
    BANKERS
    UP
    DOWN
  }

  model PayrollPeriod {
    id       String               @id @default(uuid())
    companyId String?
    company   Company?            @relation(fields: [companyId], references: [id])
    ref      String
    month    Int
    year     Int
    status   PayrollPeriodStatus  @default(OPEN)
    openedAt DateTime             @default(now())
    lockedAt DateTime?
    postedAt DateTime?
    payslips Payslip[]
    // Phase A back-relations
    attendances EmployeeAttendance[]
    variables   PayrollVariable[]

    @@index([year, month])
    @@unique([companyId, ref])
    @@index([companyId, year, month])
  }

  model Payslip {
    id         String          @id @default(uuid())
    companyId  String?
    company    Company?        @relation(fields: [companyId], references: [id])
    ref        String
    employeeId String
    employee   Employee        @relation(fields: [employeeId], references: [id])
    periodId   String
    period     PayrollPeriod   @relation(fields: [periodId], references: [id])
    lines      PayslipLine[]
    grossAmount Decimal        @default(0) @db.Decimal(16, 2)
    netAmount   Decimal        @default(0) @db.Decimal(16, 2)
    locked      Boolean        @default(false)
    costCenterAllocations PayslipCostAllocation[]

    createdAt  DateTime        @default(now())
    updatedAt  DateTime        @updatedAt

    @@index([employeeId])
    @@index([periodId])
    @@unique([companyId, ref])
  }

  model PayslipLine {
    id         String          @id @default(uuid())
    companyId  String?
    company    Company?        @relation(fields: [companyId], references: [id])
    payslipId  String
    payslip    Payslip         @relation(fields: [payslipId], references: [id])
    kind       PayslipLineKind
    code       String
    label      String
    amount     Decimal         @db.Decimal(16, 2)
    baseAmount Decimal?        @db.Decimal(16, 2)
    order      Int             @default(0)
    meta       Json?
  }

  model ContributionScheme {
    id            String               @id @default(uuid())
    companyId     String?
    company       Company?             @relation(fields: [companyId], references: [id])
    code          String
    label         String
    employeeRate  Decimal              @db.Decimal(8, 6) // 0-1
    employerRate  Decimal              @db.Decimal(8, 6) // 0-1
    ceiling       Decimal?             @db.Decimal(16, 2)
    baseKind      ContributionBaseKind
    active        Boolean              @default(true)
    // extensions
    meta          Json?
    createdAt     DateTime             @default(now())
    updatedAt     DateTime             @updatedAt

    @@unique([companyId, code])
  }

  model TaxRule {
    id           String           @id @default(uuid())
    companyId    String?
    company      Company?         @relation(fields: [companyId], references: [id])
    code         String
    label        String
    brackets     Json             // [{max:null|number, rate, deduction?}]
    roundingMode TaxRoundingMode  @default(BANKERS)
    active       Boolean          @default(true)
    meta         Json?
    createdAt    DateTime         @default(now())
    updatedAt    DateTime         @updatedAt

    @@unique([companyId, code])
  }

  model CostCenter {
    id       String  @id @default(uuid())
    companyId String?
    company   Company? @relation(fields: [companyId], references: [id])
    code     String
    label    String
    active   Boolean @default(true)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    // relations
    payslipAllocations PayslipCostAllocation[]
    employeeAllocations EmployeeCostAllocation[]
    transactions       Transaction[]
    // Phase A back-relations
    payrollVariables   PayrollVariable[]

    @@unique([companyId, code])
  }

  model EmployeeCostAllocation {
    id           String   @id @default(uuid())
    companyId    String?
    company      Company? @relation(fields: [companyId], references: [id])
    employeeId   String
    employee     Employee @relation(fields: [employeeId], references: [id])
    costCenterId String
    costCenter   CostCenter @relation(fields: [costCenterId], references: [id])
    percent      Decimal  @db.Decimal(8, 6) // 0-1

    @@index([employeeId])
    @@index([costCenterId])
  }

  model PayslipCostAllocation {
    id           String     @id @default(uuid())
    companyId    String?
    company      Company?   @relation(fields: [companyId], references: [id])
    payslipId    String
    payslip      Payslip    @relation(fields: [payslipId], references: [id])
    costCenterId String
    costCenter   CostCenter @relation(fields: [costCenterId], references: [id])
    percent      Decimal    @db.Decimal(8, 6)
    amount       Decimal    @db.Decimal(16, 2)

    @@index([payslipId])
    @@index([costCenterId])
  }

model PayrollAccountMapping {
  id            String  @id @default(uuid())
  companyId     String?
  company       Company? @relation(fields: [companyId], references: [id])
  code          String
  accountId     String?
  accountNumber String?
  label         String
  active        Boolean @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([companyId, code])
}

model FxRate {
  id            String   @id @default(uuid())
  companyId     String?
  company       Company? @relation(fields: [companyId], references: [id])
  date          DateTime
  baseCurrency  String
  quoteCurrency String
  rate          Decimal  @db.Decimal(18, 8)
  source        String?
  createdAt     DateTime @default(now())

  @@unique([companyId, date, baseCurrency, quoteCurrency])
}

// =============================
//  Immobilisations
// =============================

enum DepreciationMethod {
  LINEAR
}

enum AssetStatus {
  DRAFT
  ACTIVE
  DISPOSED
}

enum DepreciationLineStatus {
  PLANNED
  POSTED
}

model AssetCategory {
  id                         String   @id @default(uuid())
  companyId                  String?
  company                    Company? @relation(fields: [companyId], references: [id])
  code                       String
  label                      String
  durationMonths             Int
  method                     DepreciationMethod @default(LINEAR)
  active                     Boolean  @default(true)
  assetAccountId             String?
  assetAccountNumber         String?
  assetAccount               Account? @relation("AssetCategoryAssetAccount", fields: [assetAccountId], references: [id])
  depreciationAccountId      String?
  depreciationAccountNumber  String?
  depreciationAccount        Account? @relation("AssetCategoryDepAccount", fields: [depreciationAccountId], references: [id])
  expenseAccountId           String?
  expenseAccountNumber       String?
  expenseAccount             Account? @relation("AssetCategoryExpenseAccount", fields: [expenseAccountId], references: [id])
  disposalGainAccountId      String?
  disposalGainAccountNumber  String?
  disposalGainAccount        Account? @relation("AssetCategoryGainAccount", fields: [disposalGainAccountId], references: [id])
  disposalLossAccountId      String?
  disposalLossAccountNumber  String?
  disposalLossAccount        Account? @relation("AssetCategoryLossAccount", fields: [disposalLossAccountId], references: [id])
  assets                     Asset[]
  purchaseOrderLines         PurchaseOrderLine[]
  assetPurchaseOrderLines    AssetPurchaseOrderLine[]
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt

  @@unique([companyId, code])
}

model Asset {
  id               String            @id @default(uuid())
  companyId         String?
  company           Company?         @relation(fields: [companyId], references: [id])
  ref              String
  label            String
  categoryId       String
  category         AssetCategory     @relation(fields: [categoryId], references: [id])
  acquisitionDate  DateTime
  inServiceDate    DateTime?
  cost             Decimal           @db.Decimal(16, 2)
  salvage          Decimal?          @db.Decimal(16, 2)
  usefulLifeMonths Int
  method           DepreciationMethod @default(LINEAR)
  status           AssetStatus       @default(DRAFT)
  meta             Json?
  depreciationLines DepreciationLine[]
  disposals        AssetDisposal[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@index([categoryId])
  @@index([status])
  @@unique([companyId, ref])
}

model DepreciationLine {
  id             String                 @id @default(uuid())
  companyId      String?
  company        Company?               @relation(fields: [companyId], references: [id])
  assetId        String
  asset          Asset                  @relation(fields: [assetId], references: [id])
  year           Int
  month          Int
  amount         Decimal                @db.Decimal(16, 2)
  cumulative     Decimal                @db.Decimal(16, 2)
  status         DepreciationLineStatus @default(PLANNED)
  journalEntryId String?
  journalEntry   JournalEntry?          @relation(fields: [journalEntryId], references: [id])
  postedAt       DateTime?
  createdAt      DateTime               @default(now())

  @@unique([assetId, year, month])
  @@index([journalEntryId])
}

model DepreciationPeriodLock {
  id       String   @id @default(uuid())
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  year     Int
  month    Int
  lockedAt DateTime @default(now())
  note     String?

  @@unique([companyId, year, month], name: "year_month")
}

model AssetDisposal {
  id             String       @id @default(uuid())
  companyId      String?
  company        Company?     @relation(fields: [companyId], references: [id])
  assetId        String
  asset          Asset        @relation(fields: [assetId], references: [id])
  date           DateTime
  proceed        Decimal      @db.Decimal(16, 2)
  gainLoss       Decimal?     @db.Decimal(16, 2)
  journalEntryId String?
  journalEntry   JournalEntry? @relation(fields: [journalEntryId], references: [id])
  reason         String?
  meta           Json?
  createdAt      DateTime     @default(now())

  @@index([assetId])
  @@index([journalEntryId])
}

  // =============================
  //  Paie - Phase A (Présence & Variables)
  // =============================

  enum PayrollVariableKind {
    BONUS
    ALLOWANCE
    DEDUCTION
  }

  model EmployeeAttendance {
    id           String        @id @default(uuid())
    companyId    String?
    company      Company?      @relation(fields: [companyId], references: [id])
    periodId     String
    period       PayrollPeriod @relation(fields: [periodId], references: [id])
    employeeId   String
    employee     Employee      @relation(fields: [employeeId], references: [id])
    daysWorked   Decimal       @db.Decimal(8, 3)
    workingDays  Decimal?      @db.Decimal(8, 3)
    overtimeHours Decimal?     @db.Decimal(8, 2)
    notes        String?
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt

    @@unique([periodId, employeeId])
    @@index([periodId])
    @@index([employeeId])
  }

model PayrollVariable {
    id           String              @id @default(uuid())
    companyId    String?
    company      Company?            @relation(fields: [companyId], references: [id])
    periodId     String
    period       PayrollPeriod       @relation(fields: [periodId], references: [id])
    employeeId   String
    employee     Employee            @relation(fields: [employeeId], references: [id])
    kind         PayrollVariableKind
    label        String
    amount       Decimal             @db.Decimal(16, 2)
    costCenterId String?
    costCenter   CostCenter?         @relation(fields: [costCenterId], references: [id])
    createdAt    DateTime            @default(now())

    @@index([periodId])
    @@index([employeeId])
    @@index([costCenterId])
  }

// =============================
//  Capital (Apports OHADA)
// =============================

enum ShareholderType {
  INDIVIDUAL
  COMPANY
}

enum CapitalOperationType {
  CONSTITUTION
  AUGMENTATION
}

enum CapitalForm {
  SARL
  SA
}

enum CapitalStatus {
  DRAFT
  OPEN
  CLOSED
  REGISTERED
}

enum CapitalCallStatus {
  OPEN
  PARTIAL
  PAID
  CANCELLED
}

enum CapitalPaymentMethod {
  BANK
  CASH
}

model Shareholder {
  id          String   @id @default(uuid())
  companyId   String?
  company     Company? @relation(fields: [companyId], references: [id])
  name        String
  type        ShareholderType
  email       String?
  phone       String?
  address     String?
  meta        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  subscriptions CapitalSubscription[]
}

model CapitalOperation {
  id             String                @id @default(uuid())
  companyId      String?
  company        Company?              @relation(fields: [companyId], references: [id])
  ref            String
  type           CapitalOperationType
  form           CapitalForm
  status         CapitalStatus         @default(DRAFT)
  resolutionDate DateTime?
  decisionRef    String?
  nominalTarget  Decimal               @db.Decimal(16, 2)
  premiumTarget  Decimal?              @db.Decimal(16, 2)
  note           String?
  meta           Json?
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
  subscriptions  CapitalSubscription[]
  calls          CapitalCall[]

  @@unique([companyId, ref])
}

model CapitalSubscription {
  id               String           @id @default(uuid())
  companyId         String?
  company           Company?         @relation(fields: [companyId], references: [id])
  capitalOperationId String
  capitalOperation CapitalOperation @relation(fields: [capitalOperationId], references: [id])
  shareholderId    String
  shareholder      Shareholder      @relation(fields: [shareholderId], references: [id])
  nominalAmount    Decimal          @db.Decimal(16, 2)
  premiumAmount    Decimal?         @db.Decimal(16, 2)
  sharesCount      Int?
  note             String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  calls            CapitalCall[]

  @@index([capitalOperationId])
  @@index([shareholderId])
}

model CapitalCall {
  id                 String               @id @default(uuid())
  companyId          String?
  company            Company?             @relation(fields: [companyId], references: [id])
  capitalOperationId String
  capitalOperation   CapitalOperation     @relation(fields: [capitalOperationId], references: [id])
  subscriptionId     String?
  subscription       CapitalSubscription? @relation(fields: [subscriptionId], references: [id])
  callNumber         Int
  label              String?
  amountCalled       Decimal              @db.Decimal(16, 2)
  dueDate            DateTime?
  status             CapitalCallStatus    @default(OPEN)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  payments           CapitalPayment[]

  @@unique([capitalOperationId, callNumber])
  @@index([subscriptionId])
}

model CapitalPayment {
  id             String               @id @default(uuid())
  companyId      String?
  company        Company?             @relation(fields: [companyId], references: [id])
  callId         String
  call           CapitalCall          @relation(fields: [callId], references: [id])
  amount         Decimal              @db.Decimal(16, 2)
  paymentDate    DateTime
  method         CapitalPaymentMethod @default(BANK)
  accountId      String?
  account        Account?             @relation("CapitalPaymentAccount", fields: [accountId], references: [id])
  journalEntryId String?
  journalEntry   JournalEntry?        @relation("CapitalPaymentJournal", fields: [journalEntryId], references: [id])
  note           String?
  createdAt      DateTime             @default(now())

  @@index([callId])
  @@index([accountId])
  @@index([journalEntryId])
}
