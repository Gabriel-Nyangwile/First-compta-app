model Sequence {
  id        String   @id @default(uuid())
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  name      String
  value     Int      @default(0)
  updatedAt DateTime @updatedAt

  @@unique([companyId, name])
}

